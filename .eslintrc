{
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "commonjs": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "import/extensions": [
      1,
      "ignorePackages"
    ]
    // Added these rules to allow for ternary ops and conditional rendering
    // "allowShortCircuit": true,
    // "allowTernary": true
  }
}